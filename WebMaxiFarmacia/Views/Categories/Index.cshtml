@model IEnumerable<WebMaxiFarmacia.Models.Category>

@{
    ViewBag.Title = "Categoria";
}

<h2>Categorias</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", new { }, new { @class = "btn btn-primary"})
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CategoryId }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Detalle", "Details", new { id=item.CategoryId }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.CategoryId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
