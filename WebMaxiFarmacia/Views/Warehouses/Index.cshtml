@model IEnumerable<WebMaxiFarmacia.Models.Warehouse>

@{
    ViewBag.Title = "Bodega";
}

<h2>Bodega</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", new { }, new { @class = "btn btn-primary"})
</p>
<table class="table table-striped">
    <tr>
        <th>Sucursal</th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Direccion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Company.nombresuc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Direccion)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.WarehouseId }, new { @class = "btn btn-primary"}) |
            @Html.ActionLink("Details", "Details", new { id=item.WarehouseId }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.WarehouseId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
