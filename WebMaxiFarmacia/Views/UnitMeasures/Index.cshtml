@model IEnumerable<WebMaxiFarmacia.Models.UnitMeasure>

@{
    ViewBag.Title = "Unidad de Medida";
}

<h2>Unidad de Medida</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", new { }, new { @class = "btn btn-primary"})
</p>
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>Acciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.UnitMeasureId }, new { @class = "btn btn-primary btn-sm"}) |
            @Html.ActionLink("Detalles", "Details", new { id=item.UnitMeasureId }, new { @class = "btn btn-info btn-sm" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.UnitMeasureId }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
